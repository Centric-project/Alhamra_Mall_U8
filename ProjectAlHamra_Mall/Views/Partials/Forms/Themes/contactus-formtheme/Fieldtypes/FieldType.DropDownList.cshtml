@model Umbraco.Forms.Mvc.Models.FieldViewModel
@using Umbraco.Forms.Mvc
@{
        var lang = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName;

}
<style>
    select{
        color:#9ea3b1;
        background-color:transparent;
    }
    select option{
        color:white;
        background-color:#323234;
    }
</style>
<select class="@Html.GetFormFieldClass(Model.FieldTypeName)" name="@Model.Name" id="@Model.Id" style="height:40px;"
        @if (Model.Mandatory)
        {
            <text> data-val="true" data-val-required="@Model.RequiredErrorMessage"</text>
        }
>
@if(lang == "en"){
<option value="">Subject*</option>
}
else{
<option value="">الموضوع*</option>
}
    @foreach (var pv in Model.PreValues)
    {
        <option value="@pv.Value"
                @if (Model.ContainsValue(pv.Value))
                {
                    <text>selected="selected"</text>
                }
        >@pv.Value</option>
    }
</select>

@model Umbraco.Forms.Mvc.Models.FieldViewModel
@using Umbraco.Forms.Mvc
@{ 
    var placeHolder = "";
    if (!string.IsNullOrEmpty(Model.PlaceholderText.Trim()))
    {
        placeHolder = Model.PlaceholderText +  (Model.Mandatory ? "*" : "");
    }
}
<input type="text" 
       name="@Model.Name" 
       id="@Model.Id" 
       class="@Html.GetFormFieldClass(Model.FieldTypeName) .field input, .field .nice-select" 
       value="@Model.ValueAsHtmlString" 
       maxlength="500"
       @{if(string.IsNullOrEmpty(Model.PlaceholderText) == false){<text>placeholder="@placeHolder"</text>}}
       @{if(Model.Mandatory || Model.Validate){<text>data-val="true"</text>}}
       @{if (Model.Mandatory) {<text> data-val-required="@Model.RequiredErrorMessage"</text>}}
       @{if (Model.Validate) {<text> data-val-regex="@Model.InvalidErrorMessage" data-regex="@Html.Raw(Model.Regex)"</text>}}
/>




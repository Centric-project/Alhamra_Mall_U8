@model Umbraco.Forms.Mvc.Models.FieldViewModel
@using Umbraco.Forms.Mvc
@using Umbraco.Web

@{
    var settings = Model.AdditionalSettings;
}
<select class="@Html.GetFormFieldClass(Model.FieldTypeName)"  name="@Model.Name" id="@Model.Id
@if (Model.Mandatory){<text> data-val="true" data-val-required="@Model.RequiredErrorMessage"</text>}
>
    <option value="">@settings["DefaultValue"]</option>
    @foreach (var pv in Model.PreValues)
    {
        <option value="@pv.Value" 
        @if (Model.ContainsValue(pv.Value))
        {<text>selected="selected"</text>}
        >@pv.Value</option>
    }
</select>

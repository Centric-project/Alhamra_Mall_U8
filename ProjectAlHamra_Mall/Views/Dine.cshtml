@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Dine>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";

}

@* the fun starts here *@

@{
    var dineMainBanner = Model.Value<IPublishedContent>("dineMainBanner");
    if (dineMainBanner != null)
    {
        <div class="container-fluid slider-main ">
            <div class="row">

                <div class="main-banner">

                    <div class="banner_info inner_banner_info" style="display: block;width: 100%;">
                        <div class="item a inner_banner_item" style="   background: url('@dineMainBanner.Url()') center top no-repeat;background-size:100%;">

                        </div>
                        @*<div class="item_img1 rellax internal_first_star" style="background:  url('/img/Design Element 2.png')no-repeat  right center; background-size:contain;"></div>
                            <div class="item_img1 rellax internal_second_star" style="background:  url('/img/Design Element 1.png')no-repeat; background-size:contain;"></div>*@

                    </div>

                </div>
            </div>
        </div>
    }
}
<section class="container-fluid dine">
    <div class="container">
        <div class="row">
            <div class="dine_info">
                <a id="dine3" href="#shop_logo_Restro">
                    @Html.Raw(Model.Value("dineHeading"))
                </a>
                @*<p>*@
                @Html.Raw(Model.Value("dineMainDescription"))
                @*</p>*@
            </div>
        </div>
    </div>
    <div class="container  dine_section_links">
        <ul>
            @{
                var dineBrands = Model.Value<IEnumerable<IPublishedContent>>("dineBrands");
                if (dineBrands != null && dineBrands.Any())
                {
                    foreach (var image in dineBrands)
                    {
                        <li class="shadow-md">
                            <a rel="canonical" href="@image.Url()"><img src="@image.Url()" class="img-fluid" /></a>
                        </li>
                    }
                }
                else
                {
                    <p>No images selected.</p>
                }
            }
        </ul>
    </div>
</section>
<section class="container-fluid  restrn_cafe">

<section class="container-fluid court_speciality">
    <div class="container">
        <div class="row">
            @{
                var foodCourtImage = Model.Value<IPublishedContent>("foodCourtImage");
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="row ">

                        @if (foodCourtImage != null)
                        {
                            <div class="seciality_img" style="background: url(@foodCourtImage.Url())   center no-repeat; background-size: cover;"></div>
                        }

                    </div>
                </div>
            }
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="row ">
                    <div class="speciality_info">
                        <a id="dine4" href="#shop_logo_Food">
                            @Html.Raw(Model.Value("foodCourtTitle"))
                        </a>
                        <hr>
                        @Html.Raw(Model.Value("foodCourtDescription"))
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container-fluid food_seciality eqheight">
    <div class="container clearfix">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 eqheight">
                <div class="food_spec_info">
                    <a id="dine5" href="#shop_logo_Spl">
                        @Html.Raw(Model.Value("specialityFoodsTitle"))
                    </a>
                    @Html.Raw(Model.Value("specialityFoodsDescription"))
                    <hr>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 eqheight">
                <div class="row eqheight">
                    @{
                        var specialityFoods = Model.Value<IPublishedContent>("specialityFoodsImage");
                        if (specialityFoods != null)

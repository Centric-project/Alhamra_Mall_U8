                                                                        {
                                                                            <li class="card_time">@service.Value("openingClosingHours")</li>
                                                                        }
                                                                        else
                                                                        {
                                                                            <li class="card_time">@Html.Raw(shopLanding.Value<string>("defaultShopTimings"))</li>
                                                                        }
                                                                        <li class="card_location-x">@service.Value("floorName")</li>
                                                                        <li class="card_time-x">@service.Value("contactUs")</li>

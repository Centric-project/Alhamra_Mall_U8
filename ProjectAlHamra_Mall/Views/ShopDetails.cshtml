<div class="container-fluid brand_list mt-100">
    <div class="container">
        <div class="row">
            <div class="food_shops_heading">
                <p class="BrandingStyle">
                    @{
                        if(currCategId==1476)
                        {
                            @Umbraco.GetDictionaryValue("Banks")
                        }
                        else{
                            @Umbraco.GetDictionaryValue("brands")
                        }
                    }
                </p>
            </div>
        </div>
        <div class="row logos_brd_list">
            @{
                if (shopLanding != null)
                {
                    foreach (var item in shopLanding.Children())
                    {
                        var category = item.Value<IEnumerable<IPublishedContent>>("shopCategory");
                        if (category != null)
                        {
                            var categoryId = category.FirstOrDefault()?.Id;
                            
                            if (currCategId == categoryId)
                            {
                                var shopTitle = item.Value<string>("shopTitle");
                                var idValue = HttpContext.Current.Request.QueryString["Id"];
                                if (!string.IsNullOrEmpty(idValue))
                                {
                                    int id;
                                    if (int.TryParse(idValue, out id))
                                    {
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 brand_main_logo">
                                            <div class="logo_container">
                                                <div class="card  @(item.Id==id ? "highlighted" : "")">
                                                    <div class="card_info_holder">
                                                        @{
                                                            var shopLogo = item.Value<IPublishedContent>("shopLogo");
                                                            var defaultLogo = shopLanding.Value<IPublishedContent>("defaultLogo");
                                                            if (shopLogo != null)
                                                            {
                                                                <div class="card_img"><img src="@shopLogo.Url()" alt="Shop Logo"></div>
                                                            }
                                                            else
                                                            {
                                                                <div class="card_img"><img src="@defaultLogo.Url()" alt="Default Logo"></div>
                                                            }
                                                        }
                            
                                                        <ul class="shop_time_info">
                                                            <li class="card_heading">@item.Value("shopTitle")</li>
                                                            @if (!string.IsNullOrWhiteSpace(item.Value<string>("openingClosingHours")))
                                                            {
                                                                <li class="card_time">@item.Value("openingClosingHours")</li>
                                                            }
                                                            else
                                                            {
                                                                <li class="card_time">@Html.Raw(shopLanding.Value<string>("defaultShopTimings"))</li>
                                                            }
                                                            <li class="card_location-x">@item.Value("floorName")</li>
                                                            <li class="card_time-x">@item.Value("contactUs")</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <span></span>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 brand_main_logo">
                                        <div class="logo_container">
                                            <div class="card">
                                                <div class="card_info_holder">
                                                    @{
                                                        var shopLogo = item.Value<IPublishedContent>("shopLogo");
                                                        var defaultLogo = shopLanding.Value<IPublishedContent>("defaultLogo");
                                                        if (shopLogo != null)
                                                        {
                                                            <div class="card_img"><img src="@shopLogo.Url()" alt="Shop Logo"></div>
                                                        }
                                                        else
                                                        {
                                                            <div class="card_img"><img src="@defaultLogo.Url()" alt="Default Logo"></div>
                                                        }
                                                    }
                        
                                                    <ul class="shop_time_info">
                                                        <li class="card_heading">@item.Value("shopTitle")</li>
                                                        @if (!string.IsNullOrWhiteSpace(item.Value<string>("openingClosingHours")))
                                                        {
                                                            <li class="card_time">@item.Value("openingClosingHours")</li>
                                                        }
                                                        else
                                                        {
                                                            <li class="card_time">@Html.Raw(shopLanding.Value<string>("defaultShopTimings"))</li>
                                                        }
                                                        <li class="card_location-x">@item.Value("floorName")</li>
                                                        <li class="card_time-x">@item.Value("contactUs")</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <span></span>
                                    </div>
                                }
                            }
                        }
                    }
                }
            }
        </div>

           @{

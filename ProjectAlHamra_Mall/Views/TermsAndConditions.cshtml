@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = "master.cshtml";
    ViewBag.MetaTitle = @Model.Value("metaTitle");
    ViewBag.MetaDescription = @Model.Value("metaDescription");
    ViewBag.MetaKeyword = @Model.Value("metaKeyword");
	ViewBag.PageTitle = Model.Value("tandCTitle");
}

@* the fun starts here *@

@{
    //Use this code when categories banner are available
    
    var tandCBanner = Model.Value<IPublishedContent>("tandCBanner");
    if (tandCBanner != null)
    {
        <div class="container header-container slider-main ">
            <div class="row">
                <div class="main-banner mt-100">
                    <div class="banner_info inner_banner_info" style="display: block;width: 100%;">
                        <div class="item a inner_banner_item shopBanner" style="background: url('') center top no-repeat;">
                            <img src="@tandCBanner.Url()">
                        </div>
                   </div>
                </div>
            </div>
        </div>
    }
}

<!--Start Inner Page Wrapper-->
<div class="inner-section">
    <div class="container header-container custom-container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="filter-box page-content">
                    <!--Start Main Title-->
                    <div class="clearfix title-holder">
                        <h1 class="TandCtitle">@Model.Value("tandCTitle")</h1>
                    </div>
                    <!--End Main Title-->
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Raw(Model.Value("tandCDetails"))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Inner Page Wrapper-->